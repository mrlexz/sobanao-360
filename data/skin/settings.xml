  <action name="open_settings">
	  hide_callout();
	  
	  set(layer[menu_container_settings].height,450);
      tween(layer[menu_container_settings].width,230,.5););
	</action>
			
  <action name="close_settings">
	   show_callout();
	tween(layer[menu_container_settings].width,0.1,.25);
 	  delayedcall(1.2,tween(layer[menu_container_settings].height,0,.5););
	</action>
		
  <action name="open_settings_mobile">
	  if(layer[menu_container_settings].height==450,
	  tween(layer[menu_container_settings].width,0.1,.5);
 	   tween(layer[menu_container_settings].height,0,.6);
	  ,
	  set(layer[menu_container_settings].height,450);
      tween(layer[menu_container_settings].width,230,.5););
	  set( layer[menu_container_settings].align,center);
	  set(layer[menu_container_settings].x,0);
	</action>
	
	
